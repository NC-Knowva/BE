  "POST /api/users": {
    "description": "Creates a new user",
    "requestBody": {
      "username": "new_user",
      "name": "New User",
      "avatar_img_url": "https://example.com/new.jpg",
      "education_id": "high_school"
    },
    "exampleResponse": {
      "user": {
        "username": "new_user",
        "name": "New User",
        "avatar_img_url": "https://example.com/new.jpg",
        "education_id": "high_school",
        "created_at": "2023-01-15T12:00:00.000Z"
      }
    }
  },
  "POST /api/subjects/:subject_id": {
    "description": "Adds a new subject",
    "requestBody": {
      "subject_name": "Physics",
      "education_id": "high_school"
    },
    "exampleResponse": {
      "subject": {
        "subject_id": 3,
        "subject_name": "Physics",
        "education_id": "high_school"
      }
    }
  },
  "POST /api/topics": {
    "description": "Creates a new topic",
    "requestBody": {
      "topic_name": "Quantum Mechanics",
      "education_id": "undergraduate",
      "subject_id": 3
    },
    "exampleResponse": {
      "topic": {
        "topic_id": 5,
        "topic_name": "Quantum Mechanics",
        "education_id": "undergraduate",
        "subject_id": 3
      }
    }
  },
  "PATCH /api/users/:username": {
    "description": "Updates user details",
    "requestBody": {
      "name": "Updated Name",
      "avatar_img_url": "https://example.com/updated.jpg"
    },
    "exampleResponse": {
      "user": {
        "username": "math_lover",
        "name": "Updated Name",
        "avatar_img_url": "https://example.com/updated.jpg"
      }
    }
  },
  "PATCH /api/users/:username/settings": {
    "description": "Updates user settings",
    "requestBody": {
      "settings": {"theme": "light", "notifications": true}
    },
    "exampleResponse": {
      "settings": {"theme": "light", "notifications": true}
    }
  },
  "PATCH /api/subjects/:subject_id": {
    "description": "Updates subject details",
    "requestBody": {
      "subject_name": "Advanced Mathematics"
    },
    "exampleResponse": {
      "subject": {
        "subject_id": 2,
        "subject_name": "Advanced Mathematics"
      }
    }
  },
  "PATCH /api/topics/:topic_id": {
    "description": "Updates topic details",
    "requestBody": {
      "topic_name": "Basic Algebra"
    },
    "exampleResponse": {
      "topic": {
        "topic_id": 1,
        "topic_name": "Basic Algebra"
      }
    }
  },
  "DELETE /api/users/:username": {
    "description": "Deletes the specified user",
    "response": {"204": "No Content"}
  },
  "DELETE /api/subjects/:subject_id": {
    "description": "Deletes the specified subject",
    "response": {"204": "No Content"}
  },
  "DELETE /api/topics/:topic_id": {
    "description": "Deletes the specified topic",
    "response": {"204": "No Content"}
  }
}




