      "education_levels": [
        {"education": "high_school"},
        {"education": "undergraduate"}
      ]
    }
  },
  "GET /api/:username/calendars": {
    "description": "Serves calendar data for the specified user",
    "queries": [],
    "exampleResponse": {
      "calendar": {
        "events": [
          {
            "title": "Study Session",
            "start": "2023-01-16T14:00:00.000Z",
            "end": "2023-01-16T16:00:00.000Z"
          }
        ]
      }
